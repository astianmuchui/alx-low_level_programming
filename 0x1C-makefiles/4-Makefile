CC = gcc

SRC = main.c file1.c file2.c

OBJ = $(SRC:.c=.o)
NAME = school

RM = rm -f

CFLAGS = -Wall -pedantic -Werror -Wextra

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(OBJ) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
